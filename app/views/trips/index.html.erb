<div>
  <div>
    <h1>
      All Trips
    </h1>
  </div>
</div>

<hr>

<div>
  <div>

    <% if current_user != nil %>
      <h2>
        Add a new trip
      </h2>

      <form action="/insert_trip" method="post">
        <div>
          <label for="city_box">
            City
          </label>

          <input type="text" id="city_box" name="query_city">
        </div>

        <div>
          <label for="user_id_box">
            User
          </label>

          <input type="text" id="user_id_box" name="query_user_id" value="<%= current_user.id %>">


      </div>

      <!-- <div>
        <label for="public_rating_box">
          Public rating
        </label>

        <input type="text" id="public_rating_box" name="query_public_rating">
      </div>-->

      <div>
        <input type="checkbox" id="private_box" name="query_private" value="1">

        <label for="private_box">Private</label>
      </div>

      <!--<div>
        <label for="user_rating_box">
          User rating
        </label>

        <input type="text" id="user_rating_box" name="query_user_rating">
      </div>-->

      <!--<div>
        <label for="days_count_box">
          Days count
        </label>

        <input type="text" id="days_count_box" name="query_days_count">
      </div>

      <div>
        <label for="events_count_box">
          Events count
        </label>

        <input type="text" id="events_count_box" name="query_events_count">
      </div>

      <div>
        <label for="ratings_count_box">
          Ratings count
        </label>

        <input type="text" id="ratings_count_box" name="query_ratings_count">
      </div>-->

      <button>
        Create trip
      </button>
    </form>
            <% else %>
          <p> Please sign in to create a trip </p>
        <% end %>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          City
        </th>

        <th>
          User
        </th>

        <th>
          Public rating
        </th>

        <th>
          Private
        </th>

        <th>
          User rating
        </th>

        <th>
          Days count
        </th>

        <th>
          Events count
        </th>

        <th>
          Ratings count
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_trips.each do |a_trip| %>
        <tr>
          <td>
            <%= a_trip.id %>
          </td>

          <td>
            <%= a_trip.city %>
          </td>

          <td>
            <%= a_trip.user_id %>
          </td>

          <td>
            <%= a_trip.public_rating %>
          </td>

          <td>
            <%= a_trip.private %>
          </td>

          <td>
            <%= a_trip.user_rating %>
          </td>

          <td>
            <%= a_trip.days_count %>
          </td>

          <td>
            <%= a_trip.events_count %>
          </td>

          <td>
            <%= a_trip.ratings_count %>
          </td>

          <td>
            <%= time_ago_in_words(a_trip.created_at) %> ago
          </td>
          <td>
            <%= time_ago_in_words(a_trip.updated_at) %> ago
          </td>

          <td>
            <a href="/trips/<%= a_trip.id %>">
              Show details
            </a>
          </td>
        </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
